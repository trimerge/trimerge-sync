{
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "clean-all": "wsrun --bin='pnpm' --parallel clean",
    "test-ci": "CI=true wsrun --bin='pnpm' --no-prefix --serial test-ci",
    "test:update-all-snapshots": "wsrun --bin='pnpm' --serial test:update-snapshots",
    "build-all": "wsrun --bin='pnpm' --serial build",
    "watch-all": "wsrun --bin='pnpm' --parallel watch",
    "typecheck": "tsc -b tsconfig.dev.json",
    "lint": "eslint packages/*/src/**/*.ts",
    "bump-version": "node bump-version.mjs"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "engines": {
    "node": ">=14.13.0"
  },
  "dependencies": {},
  "peerDependencies": {},
  "devDependencies": {
    "@descript/jest-github-reporter": "^1.0.1",
    "@jest/reporters": "^29",
    "@types/jest": "^29",
    "@typescript-eslint/eslint-plugin": "5.1.0",
    "@typescript-eslint/parser": "5.1.0",
    "codecov": "3.8.3",
    "eslint": "8.0.1",
    "eslint-config-prettier": "8.3.0",
    "fs-extra": "^10.0.0",
    "husky": "4.3.0",
    "jest": "^29",
    "prettier": "2.4.1",
    "pretty-quick": "3.1.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^29",
    "tslint-config-prettier": "1.18.0",
    "typescript": "4.4.4",
    "wsrun": "5.2.4"
  }
}
