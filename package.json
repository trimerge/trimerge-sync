{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test-ci": "CI=true wsrun --no-prefix --serial test-ci",
    "build-all": "wsrun --serial build",
    "watch-all": "wsrun --parallel watch",
    "typecheck": "wsrun --serial tsc --noEmit",
    "lint": "eslint packages/*/src/**/*.ts",
    "bump-version": "node bump-version.mjs"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "engines": {
    "node": ">=12"
  },
  "dependencies": {},
  "peerDependencies": {},
  "devDependencies": {
    "@descript/jest-github-reporter": "^1.0.1",
    "@types/jest": "27.0.2",
    "@typescript-eslint/eslint-plugin": "5.1.0",
    "@typescript-eslint/parser": "5.1.0",
    "codecov": "3.8.3",
    "eslint": "8.0.1",
    "eslint-config-prettier": "8.3.0",
    "fs-extra": "^10.0.0",
    "husky": "4.3.0",
    "prettier": "2.4.1",
    "pretty-quick": "3.1.1",
    "ts-jest": "27.0.7",
    "tslint-config-prettier": "1.18.0",
    "typescript": "4.4.4",
    "wsrun": "5.2.4"
  }
}
