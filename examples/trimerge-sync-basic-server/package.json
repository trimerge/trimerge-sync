{
  "name": "trimerge-sync-basic-server",
  "version": "0.18.0",
  "description": "basic websocket server for trimerge-sync",
  "main": "./dist/index.js",
  "module": "./dist/index.esm.js",
  "typings": "./dist/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "test": "jest --watch",
    "test-ci": "jest --coverage --reporters=@descript/jest-github-reporter",
    "test:update-snapshots": "jest --updateSnapshot",
    "start": "ts-node-dev --respawn --project tsconfig.dev-start.json --transpile-only src/sample-server.ts",
    "build": "rollup -c",
    "lint": "eslint src/**/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marcello3d/trimerge.git"
  },
  "keywords": [
    "json",
    "three-way-merge",
    "diff",
    "diff3",
    "merge"
  ],
  "author": {
    "name": "Marcello Bast√©a-Forte",
    "email": "marcello@cellosoft.com"
  },
  "license": "Zlib",
  "bugs": {
    "url": "https://github.com/marcello3d/trimerge-sync/issues"
  },
  "homepage": "https://github.com/marcello3d/trimerge-sync#readme",
  "dependencies": {
    "@types/ws": "^8.2.0",
    "fs-extra": "^10.0.0",
    "trimerge-sync": "0.18.0",
    "ws": "^8.2.3"
  },
  "files": [
    "dist/**/*",
    "src/**/*"
  ],
  "peerDependencies": {
    "better-sqlite3": "^7.4.1"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "21.0.0",
    "@rollup/plugin-node-resolve": "13.0.6",
    "@types/better-sqlite3": "^7.4.0",
    "@types/fs-extra": "^9.0.13",
    "better-sqlite3": "^7.4.3",
    "jest": "27.0.6",
    "rollup": "2.58.0",
    "rollup-plugin-typescript2": "0.30.0",
    "trimerge-sync": "0.18.0",
    "ts-node": "^10.3.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "4.4.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "globals": {
      "ts-jest": {
        "diagnostics": {
          "warnOnly": true
        }
      }
    }
  }
}
