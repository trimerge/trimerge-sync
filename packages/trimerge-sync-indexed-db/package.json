{
  "name": "trimerge-sync-indexed-db",
  "version": "0.10.2-rc.1",
  "description": "indexed-db backend for trimerge-sync",
  "main": "./dist/index.js",
  "module": "./dist/index.esm.js",
  "typings": "./dist/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "test": "jest --watch",
    "test-ci": "jest --coverage --reporters=@descript/jest-github-reporter",
    "build": "rollup -c",
    "watch": "rollup -c -w",
    "lint": "eslint src/**/*.ts",
    "prepublishOnly": "rm -rf dist/ && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marcello3d/trimerge.git"
  },
  "keywords": ["json", "three-way-merge", "diff", "diff3", "merge"],
  "author": {
    "name": "Marcello Bast√©a-Forte",
    "email": "marcello@cellosoft.com"
  },
  "license": "Zlib",
  "bugs": { "url": "https://github.com/marcello3d/trimerge-sync/issues" },
  "homepage": "https://github.com/marcello3d/trimerge-sync#readme",
  "dependencies": { "broadcast-channel": "^3.7.0", "idb": "6.1.2" },
  "peerDependencies": { "trimerge-sync": "0.10.2-rc.1" },
  "files": ["dist/**/*", "src/**/*"],
  "devDependencies": {
    "@rollup/plugin-commonjs": "19.0.1",
    "@rollup/plugin-node-resolve": "13.0.2",
    "fake-indexeddb": "^3.1.3",
    "immer": "^9.0.5",
    "jest": "27.0.6",
    "jsondiffpatch": "^0.4.1",
    "rollup": "2.53.2",
    "rollup-plugin-typescript2": "0.30.0",
    "trimerge": "^1.3.0-alpha.15",
    "trimerge-sync": "0.10.2-rc.1",
    "trimerge-sync-hash": "0.10.2-rc.1",
    "typescript": "4.3.5"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "globals": { "ts-jest": { "diagnostics": { "warnOnly": true } } }
  }
}
